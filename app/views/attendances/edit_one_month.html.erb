<% provide(:title, @user.name) %>
<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
  <div>
    <h1>勤怠編集画面</h1>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出勤時間</th>
          <th>退勤時間</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>指示者確認㊞</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <td><%= $days_of_the_week[day.worked_on.wday] %></td>
              <% if (Date.current < day.worked_on) %>
                <td><%= attendance.time_field :started_at, readonly: true, class: "form-control" %></td>
                <td><%= attendance.time_field :finished_at, readonly: true, class: "form-control" %></td>
              <% else %>
                <% if day.indicater_select == "承認" %>
                  <td><%= attendance.time_field :started_edit_at, class: "form-control" %></td>
                  <td><%= attendance.time_field :finished_edit_at, class: "form-control" %></td>
                <% else %>
                  <% day.finished_edit_at = day.finished_at %>
                  <% day.started_edit_at = day.started_at %>
                  <td><%= attendance.time_field :started_edit_at, class: "form-control" %></td>
                  <td><%= attendance.time_field :finished_edit_at, class: "form-control" %></td> 
                <% end %> 
                    <%= attendance.hidden_field :started_before_at, value: day.started_at if day.started_at.present? %>
                    <%= attendance.hidden_field :finished_before_at, value: day.finished_at if day.finished_at.present? %> 
                    <%= attendance.hidden_field :started_at, value: day.started_edit_at if day.indicater_select == "承認" %>
                    <%= attendance.hidden_field :finished_at, value: day.finished_edit_at if day.indicater_select == "承認" %>
              <% end %>
                 
              <td><%= attendance.check_box :next_day %></td>
              <td>
                <% if day.indicater_select == "承認" %>
                  <%= str_times = working_times(day.started_edit_at, day.finished_edit_at) if day.started_edit_at.present? && day.finished_edit_at.present? %>
                <% else %>
                  <%= str_times = working_times(day.started_at, day.finished_at) if day.started_at.present? && day.finished_at.present? %>
                <% end %>
                <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
              </td>
              <td><%= attendance.text_field :note, class: "form-control" %></td>
              <td><%= attendance.collection_select :indicater_request, @superiors, :name, :name, {:include_blank => "選択してください"} %></td> 
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table> 
  </div>

  <div class="center">
    <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-lg btn-primary" %>
    <%= f.submit "編集を保存する", class: "btn btn-lg btn-primary" %>
  </div> 
<% end %>  